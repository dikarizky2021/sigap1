<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:id="@+id/layout_item"
        >
        <TextView
            android:id="@+id/rw_tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textSize="8sp"
            android:text="03 Februari 2022"
            android:textColor="@color/bluep">
        </TextView>
        <TextView
            android:id="@+id/rw_lokasi_view"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Detail Lokasi"
            android:textColor="@color/grey"
            android:textSize="6sp"
            android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/rw_nama_pelanggar"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="Jenis Pelanggaran"
                android:textColor="@color/black">
            </TextView>


        <TextView
            android:id="@+id/rw_detail_pelanggaran"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Detail Pelanggaran"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:textStyle="bold"></TextView>










    </LinearLayout>

</androidx.cardview.widget.CardView>