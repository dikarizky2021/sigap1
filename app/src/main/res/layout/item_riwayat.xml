<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="10dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/layout_item"
        >

        <TextView
            android:id="@+id/nama_pelanggar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Jenis Pelanggaran"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="10sp"
            android:text="03 Februari 2022"
            android:textColor="@color/grey">
        </TextView>

        <TextView
            android:id="@+id/detail_pelanggaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_pelanggar"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Detail Pelanggaran"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/lokasi_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_pelanggaran"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Detail Lokasi"
            android:textColor="@color/grey"
            android:textSize="8sp"
            android:textStyle="bold"></TextView>





    </RelativeLayout>

</androidx.cardview.widget.CardView>